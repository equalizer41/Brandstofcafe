<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        window.sluitAlleCollapses = () => {
            const collapses = document.querySelectorAll('.accordion-collapse.show');
            collapses.forEach(c => {
                const collapse = bootstrap.Collapse.getInstance(c);
                if (collapse) {
                    collapse.hide();
                }
            });
        };
    </script>
    <script>
        window.openCollapseById = (collapseId) => {
            const el = document.getElementById(collapseId);
            if (el) {
                const bsCollapse = bootstrap.Collapse.getOrCreateInstance(el);
                bsCollapse.show();
            }
        };
    </script>

    <script>
        window.bootstrapModalHelper = {
            show: function (selector) {
                var el = document.querySelector(selector);
                if (!el) return;
                var modal = bootstrap.Modal.getOrCreateInstance(el);
                modal.show();
            }
        };
    </script>

</body>

</html>
